---
const employeesData = await fetch(
    "https://frontend-design-theme.netlify.app/api/employees"
   ).then((response)=>response.json());
   console.log(employeesData);

   import EmployeeCard from "./EmployeeCard.astro";

   const {antal = 6} = Astro.props;
---


<section>
    <ul class="employee-list" role="list">
        {
            employeesData
            .slice(0, antal)
            .map((employee, index)=>(
                <EmployeeCard employee={employee} index={index}/>
            ))
        }
    </ul>        
</section>

<style>
    .employee-list{
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1.5rem;
        padding-inline: max(20px, 50% - var(--content-width) / 2);
    }

    @media (max-width:600px){
        .employee-list{
        grid-template-columns: 1fr;}
    }

</style>