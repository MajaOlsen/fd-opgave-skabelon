---
import "../styles/global.css"
import "../styles/components.css"
---

<section>
<div>
    <h4>Subscribe Our Newsletter</h4>
    <p>Build stronger Customer Relationships with <b>Consultalk</b></p>
</div>
<div class="input_container">
<input type="text" placeholder="your mail address">
<button class="yellowBigButton">Subscribe</button>
</div>

</section>

<style>

section h4, p {
   color: var(--white-color);
}

input[type=text] {
    padding:13px 15px; 
    border-radius: 25px;
    background-color: var(--white-color);
    color: var(--grey-color);
    border:none;
}

input[type=text]:focus {
    border-color:var(--yellow-color);
}

input[type=submit] {
    padding:5px 15px; 
    background:#ccc; 
    border:0 none;
    cursor:pointer;
    -webkit-border-radius: 5px;
    border-radius: 5px; 
}

section{
    background-color: var(--black-color);
    border-radius: 20px;
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-inline: max(1rem, 50% - var(--content-width) / 2);
    justify-content: space-evenly;
    padding-block:  max(1rem, 5% - 10px / 2);
    gap: 1rem;
    margin-top: 2rem;
    margin-bottom: 4rem;
}

.input_container {
    display: flex;
    flex-direction: row;
    gap: 10px;
}


@media(max-width:600px){
    
}
</style>