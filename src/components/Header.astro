---
import "../styles/global.css"
import "../styles/components.css"
import Popover from "./Popover.astro"
---

<section class="header_container">
    <div><h1>AskExperts</h1></div>
    <div><nav>
    <ul>
    <li><a href="/#">Home</a> </li>
    <li><a href="/casestudy">Case study</a></li>
    <li><a href="/employees">Team</a></li>
    <li> <a href="/about">About</a></li>
</ul></nav></div>
<div><button class="logInButton" popovertarget="popoverDiv">Login</button></div>
</section>

<div popover id="popoverDiv">
    <Popover/>
</div>


<style>
    @layer components {
        .header_container{
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;

            padding-inline: max(1rem, 50% - var(--content-width) / 2);
            padding-top: 10px;
            padding-bottom: 10px;

            background-color: var(--grey-color);
            
        }

        ul{
           display: flex;
           gap:0.8rem;
        }

        ul li{
            list-style: none;
            display:inline;
            color: var(--white-color);
            
        }

        ul li:hover{
            border-bottom: solid var(--white-color) 1px;
            transition: ease-in-out 0.3s;
        }

        a{
            text-decoration: none;
            color: var(--white-color);
        }


 .logInButton{
    background-color: var(--yellow-color);
    padding: 6px 12px;
    border-radius: 15px;
    margin: 1rem;
    border: none;
}

#popoverDiv {
    position: fixed;  
    top: 0;  
    padding-top: max(20%, 300px);
    width: 100vw;  
    height: 100vh;  
    background-color: rgba(0, 0, 0, 0.5);  
    backdrop-filter: blur(10px); 
    z-index: 999; 
    transition: opacity 0.3s ease-in-out;  
}
    }
</style>