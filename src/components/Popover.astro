---
import "../styles/global.css"
import "../styles/components.css"
---

<section>
    <h4>Dashboard Login</h4>
    <div>
    <label>Email address</label>
    <input type="text"></div>
    <div>
    <label>Password</label>
    <input type="text"></div>
    <button class="yellowBigButton" popovertarget="popoverDiv" popovertargetaction="hide">Go to dashboard</button>
</section>

<style>
    section{
        display: flex;
        flex-direction: column;
        justify-content: center;
        margin-inline: max(1rem, 50% - 30rem / 2);
        background-color: var(--black-color);
        border-radius: 20px;
        padding-top:2rem;
        padding-bottom:2rem;
        color: var(--white-color);
        gap: 1rem;
    }

    h4{
        color: var(--white-color);
        display: flex;
        justify-content: center;
    }

    div{
        display: flex;
        flex-direction: column;
        margin-inline:1rem;
        gap:0.3em;

    }

    input{
        background-color: var(--white-color);
        padding-block: 0.5rem;
        border-radius: 5px;
        color: var(--black-color);
    }

    .yellowBigButton{
        color: var(--black-color);
        margin-inline:8rem;
        display: flex;
        justify-content: center;
    }
</style>