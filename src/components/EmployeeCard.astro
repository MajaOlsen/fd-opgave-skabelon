---
import "../styles/global.css"
import "../styles/components.css"

const { employee, index} = Astro.props;
---

<li id={employee.id} class="employee-card">
<a href=`employees/${employee.slug}`>
    <figure class="employeeImage_container">
        <img src = {employee.img} alt=""/>
        <p class="blackTitleTag">{employee.title}</p>
    </figure>
    <div>
        <h4>{employee.name}</h4>
        <p>{employee.description}</p>
    </div>
    <div>
        <ul role="list" class="icon-container">{
            employee.social_links.map((link)=>(
                <li>
                    <p  set:html={link.icon}/>
                </li>
            ))
        }
     </ul>
 </div>
</a>
</li>

<style>
    .employee-card{
        display: flex;
        flex-direction: column;
        justify-content: center;
        text-align: center;
        transition: 0.2s ease;
        img{
            border-radius: 25px;
        }
        &:hover{
            transform: scale(1.01);
        }
        a{
            text-decoration: none;
        }

}
 

    .icon-container{
        display: flex;
        flex-direction: row;
        gap: 2rem;
        justify-content: center;

        a{
        color:var(--black-color);
       }
    }

    .employeeImage_container{
        position: relative;
        display: inline-block;

        
    }

.blackTitleTag {
    position: absolute;
    bottom: 1rem;
    right: 1rem;
}

</style>